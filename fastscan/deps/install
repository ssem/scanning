#!/bin/bash

home=`pwd`

### unzip ###
sudo apt-get -y install unzip

### make ###
sudo apt-get -y install make

### python ###
sudo apt-get -y install python

### python-requests ###
sudo apt-get -y install python-requests

### libpcap ###
sudo apt-get -y install libpcap0.8-dev

### masscan ###
unzip masscan-master.zip
cd masscan-master
make
sudo make install
cd $home
rm -r masscan-master
